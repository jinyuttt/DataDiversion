package DataControls;

import java.awt.Image;

import javax.swing.ImageIcon;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class StateLamp extends JPanel {
 private JLabel jlpic;
 public StateLamp()
 {
     jlpic=new JLabel();
     init1Frame();
 }
 
    /**    
     * serialVersionUID:TODO（用一句话描述这个变量表示什么）    
     *    
     * @since Ver 1.1    
     */    
    
    private static final long serialVersionUID = 1L;
    public void init1Frame() {  
        ImageIcon icon = new ImageIcon("E:\\Study\\java\d\atasub\\DataDiversion\\src\images\\bluelight.png");  
        icon.setImage(icon.getImage().getScaledInstance(icon.getIconWidth(),  
                icon.getIconHeight(), Image.SCALE_DEFAULT));  
        System.out.println(icon.getIconHeight() + "" + icon.getIconWidth());  
        jlpic.setBounds(0, 0, 1366, 768);  
        jlpic.setHorizontalAlignment(0);  
        jlpic.setIcon(icon);  
        jlpic.setText("lighet");
    }  
}
